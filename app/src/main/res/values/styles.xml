<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Timespan" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/Chip.Choice.TextAppearance</item>
        <item name="android:textColor">@color/chip_choice</item>
        <item name="android:layout_marginStart">@dimen/timespan_spacing</item>
        <item name="android:layout_marginEnd">@dimen/timespan_spacing</item>
    </style>

    <style name="Chip.Choice.TextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
